        }

        /* Glowing effect for text */
        .glowing-text {
            color: #00E676;
            text-shadow: 0 0 5px #00E676, 0 0 10px #00E676, 0 0 20px #00E676, 0 0 40px #00E676;
        }

        /* Glowing effect for button */
        .glowing-button {
            background-color: #18FFFF;
            color: white;
            font-size: 20px;
            padding: 15px 30px;
            border-radius: 40px;
            border: none;
            cursor: pointer;
            transition: box-shadow 0.3s ease;
        }

        .glowing-button:hover {
            box-shadow: 0 0 10px #00FFFF, 0 0 20px #00FFFF, 0 0 30px #00FFFF;
        }

